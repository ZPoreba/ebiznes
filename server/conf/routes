
# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Product
GET     /readproducts               controllers.ProductController.read
GET     /readproduct/:id            controllers.ProductController.readById(id: Long)

GET    /addproduct                  controllers.ProductController.create
POST   /addproducthandle            controllers.ProductController.createHandle

GET    /updateproduct/:id           controllers.ProductController.update(id: Long)
POST   /updateproducthandle         controllers.ProductController.updateHandle

GET    /deleteproduct/:id           controllers.ProductController.delete(id: Long)

# Cart
GET     /readcarts                  controllers.CartController.read
GET     /readcart/:id               controllers.CartController.readById(id: Long)

GET     /addcart                    controllers.CartController.create
GET     /addcarthandle              controllers.CartController.createHandle

GET     /updatecart                 controllers.CartController.update
GET     /deletecart/:id             controllers.CartController.delete(id: Long)

# Category
GET     /readcategories             controllers.CategoryController.read
GET     /readcategory/:id           controllers.CategoryController.readById(id: Long)

GET     /addcategory                controllers.CategoryController.create
POST    /addcategoryhandle          controllers.CategoryController.createHandle

GET     /updatecategory/:id         controllers.CategoryController.update(id: Long)
POST    /updatecategoryhandle       controllers.CategoryController.updateHandle

GET     /deletecategory/:id         controllers.CategoryController.delete(id: Long)

# Opinion
GET     /readopinions               controllers.OpinionController.read
GET     /readopinion/:id            controllers.OpinionController.readById(id: Long)

GET     /addopinion                 controllers.OpinionController.create
POST    /addopinionhandle           controllers.OpinionController.createHandle

GET     /updateopinion/:id          controllers.OpinionController.update(id: Long)
GET     /updateopinionhandle        controllers.OpinionController.updateHandle

GET     /deleteopinion/:id          controllers.OpinionController.delete(id: Long)

# Order
GET     /order/token                controllers.OrderController.getToken
GET     /orders                     controllers.OrderController.read
POST    /order                      controllers.OrderController.create
GET     /order                      controllers.OrderController.readById
PUT     /order                      controllers.OrderController.update
DELETE  /order                      controllers.OrderController.delete

# Payment
GET     /payment/token              controllers.PaymentController.getToken
GET     /payments                   controllers.PaymentController.read
POST    /payment                    controllers.PaymentController.create
GET     /payment                    controllers.PaymentController.readById
PUT     /payment                    controllers.PaymentController.update
DELETE  /payment                    controllers.PaymentController.delete

# User
GET     /user/token                 controllers.UserController.getToken
GET     /users                      controllers.UserController.read
POST    /user                       controllers.UserController.create
GET     /user                       controllers.UserController.readById
PUT     /user                       controllers.UserController.update
DELETE  /user                       controllers.UserController.delete

# Return
GET     /return/token               controllers.ReturnController.getToken
GET     /returns                    controllers.ReturnController.read
POST    /return                     controllers.ReturnController.create
GET     /return                     controllers.ReturnController.readById
PUT     /return                     controllers.ReturnController.update
DELETE  /return                     controllers.ReturnController.delete

# WishList
GET     /wishlist/token             controllers.WishListController.getToken
GET     /wishlists                  controllers.WishListController.read
POST    /wishlist                   controllers.WishListController.create
GET     /wishlist                   controllers.WishListController.readById
PUT     /wishlist                   controllers.WishListController.update
DELETE  /wishlist                   controllers.WishListController.delete

# DiscountCode
GET     /discountcode/token         controllers.DiscountCodeController.getToken
GET     /discountcodes              controllers.DiscountCodeController.read
POST    /discountcode               controllers.DiscountCodeController.create
GET     /discountcode               controllers.DiscountCodeController.readById
PUT     /discountcode               controllers.DiscountCodeController.update
DELETE  /discountcode               controllers.DiscountCodeController.delete

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

      