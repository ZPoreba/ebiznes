DELETE  /return                     controllers.ReturnController.delete

# WishList
GET     /wishlist/token             controllers.WishListController.getToken
POST    /wishlist                   controllers.WishListController.create
GET     /wishlist                   controllers.WishListController.read
PUT     /wishlist                   controllers.WishListController.update
DELETE  /wishlist                   controllers.WishListController.delete

# DiscountCode
GET     /discountcode/token         controllers.DiscountCodeController.getToken
POST    /discountcode               controllers.DiscountCodeController.create
GET     /discountcode               controllers.DiscountCodeController.read
PUT     /discountcode               controllers.DiscountCodeController.update
DELETE  /discountcode               controllers.DiscountCodeController.delete

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

      